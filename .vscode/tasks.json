{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: g++.exe Aktive Datei kompilieren",
        "command": "C:\\mingw64\\bin\\g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${file}.exe",
          "-DSFML_STATIC",
  
          // Includes                   (Comment Out What not Used aka windows or linux)
          "-I./include",

          "-IF:/Dropbox/Dropbox/CPP_LIBARIES/windows/include/",
          //"-IF:/Dropbox/Dropbox/CPP_LIBARIES/linux/include/",
  
          // Library Paths              (Comment Out What not Used aka windows or linux)

          "-LF:/Dropbox/Dropbox/CPP_LIBARIES/windows/lib/",
          //"-LF:/Dropbox/Dropbox/CPP_LIBARIES/linux/lib/",
  
          // Link Libraries
          "-lsfml-graphics-s",
          "-lsfml-audio-s",
          "-lsfml-window-s",
          "-lsfml-system-s",
          "-lsfml-main-s",
          "-lfreetype",
          "-lopengl32",
          "-lvorbisenc",
          "-lvorbisfile",
          "-lvorbis",
          "-logg",
          "-lflac",
          "-lgdi32",
          "-luser32",
          "-lwinmm"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Vom Debugger generierte Aufgabe."
      }
    ]
  }
  